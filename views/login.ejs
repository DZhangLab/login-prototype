<%- include("partials/header") -%>

<div class="container mt-5">
  <h1>Login</h1>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <div class="alert alert-success" role="alert" id="loginAlert">
                <p style="text-align: center;">Incorrect Credential</p>
            </div>
            <button type="submit" class="btn btn-primary btn-registerpage">Login</button>
          </form>

        </div>
      </div>
    </div>
    <!-- div for login through Oauth  -->
    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google oauthbtn btn-registerpage" href="/auth/google" role="button">
            <i class="fab fa-google "></i>
            Sign In with Google
          </a>
          <a class="btn btn-block btn-social btn-facebook oauthbtn btn-registerpage" href="/auth/facebook" role="button">
            <i class="fab fa-facebook "></i>
            Sign In with Facebook
          </a>
          <a class="btn btn-block btn-social btn-twitter oauthbtn btn-registerpage" href="/auth/facebook" role="button">
            <i class="fab fa-twitter"></i>
            Sign In with Twitter
          </a>
        </div>
      </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script>
        $('#loginAlert').hide();
        const urlParams = new URLSearchParams(window.location.search);
        const myParam = urlParams.get('error');
        if(myParam == "Incorrect_Credential") {
            $('#loginAlert').show();
        }
    </script>

  

